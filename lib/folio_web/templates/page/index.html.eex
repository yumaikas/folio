<%=if [] == @ideas do %>
  <%="No ideas have been listed here yet, come back later."%>
<% else %>
  <%= for {tag, ideas} <- group_ideas_by_tag(@ideas) do %>
    <h2 id="<%=tag%>"><%=link empty(tag), to: "/view/bytag/#{tag}"%></h2>
    <%=for i <- ideas do %>
      <p style="padding-left: 30px;">&gt; <%=link empty(i.title), to: "/view/idea/#{i.id}"%></p>
    <% end %>
  <% end %>
<%end%>